<h3>Forgot your password?</h3><br>	
 
 	<!-- <span class="input-group-addon"></span> -->
	
<form class="form-group">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		<%= render "devise/shared/error_messages", resource: resource %>
		   <strong><%= f.label "Email:" %></strong><!--&nbsp;&nbsp;&nbsp; --><br><br>
		   
		     <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control", placeholder: "Email" %>&nbsp;&nbsp;
			<legend>
		    	<%= f.submit "Reset Password", class: "btn btn-success" %>
		    </legend>
	<% end %>
	<strong class="btn btn-warning">
		<%= link_to "Sign up", new_registration_path(resource_name) %>
	</strong>&nbsp;&nbsp;&nbsp;
	<strong class="btn btn-warning">
		<%= link_to "Log in", new_session_path(resource_name) %>
	</strong>

</form>