<!-- Page Banner -->
<div class="container-fluid no-left-padding no-right-padding page-banner gallery-masonry-banner">
    <!-- Container -->
    <div class="container">
        <h3 class="tc_white"><%= @stay_category.try(:name)%></h3>
        
    </div><!-- Container /- -->
</div><!-- Page Banner /- -->

<main class="site-main">
    <% if flash[:alert] %>
     <div class="alert"><%= flash[:alert] %></div>
    <% end %>

    <!-- Gallery Masonry -->
    <div class="container-fluid no-left-padding no-right-padding gallery-main gallery-masonry">
        <!-- Container -->
        <div class="container">
        </div><!-- Container /- -->
        <!-- Gallery List -->
        <div class="row gallery-list">
          <%@homestays.each do |homestay|%> 
            <div class="col-md-3 col-sm-4 col-xs-6 gallery-box environment">
                <div class="gallery-content">
                    <i><a href="<%= stay_path(homestay)%>"><img src="<%= homestay.image_select%>" alt="vista" /></a></i>
                    <div class="gallery-detail">
                        <!-- <a class="zoom" href="<%= homestay.image_select%>"><i class="fa fa-picture-o fa-5x"></i></a> -->
                        <a href="<%=stay_path(homestay)%>"><i class="fa fa-link"></i></a>
                    </div>
                    <!-- <div class="homestay-title"> -->
                      <h5><a class="homestay-title" href="<%=stay_path(homestay)%>"><%= homestay.stay_name %>&nbsp;&nbsp;<%= homestay.stay_title %></a></h5>
                      <!-- <p class="homestay-title"><%#= homestay.address %></p> -->
                    <!-- </div> -->
                </div>
            </div>
          <%end%>
        </div><!-- Gallery List /- -->
        <div class="clearfix"></div>
    </div><!-- Gallery Masonry /- -->
    </main>
<style type="text/css">
    .gallery-content img {
    width: 100%;
    float: left;
    height: 190px;
    min-height: 190px;
}

</style>