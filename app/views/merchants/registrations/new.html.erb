<!-- Page Banner -->
<script type="text/javascript">
  $( document ).ready(function() {
    <% if @merchant.errors.any?%>
  $('#partner_sign_up_with_email').html("<%= j (render partial: 'partner_sign_up_with_email') %>")
  $('#partner_hide_form').hide();
  <%end%>
});
</script>
<div id="partner_sign_up_with_email"></div>
<div id="partner_hide_form">
<div class="container-fluid no-left-padding no-right-padding page-banner signup-banner">
   <!-- Container -->
   <div class="container">
      <h3 class="tc_white">Partner Sign Up</h3>
      <ol class="breadcrumb">
        <!--  <li class="active tc_white">Partner Sign Up</li> -->
      </ol>
   </div>
   <!-- Container /- -->
</div>
<!-- Page Banner /- -->
<main class="site-main">
   <!-- SignUp Form -->
   <div class="container-fluid no-left-padding no-right-padding signup-section">
   <!-- Container -->
   <div class="container">
      <div class="row">
         <div class="col-md-offset-1 col-md-10">
            <div class="signup-form">

                <div class="col-md-6">
                  <%= link_to "/auth/google_oauth2", class:"btn btn-block btn-social btn-google" do %>
                     <span class="fa fa-google"></span> Sign UP with Google+
                  <% end %>
               </div>
               <div class="col-md-6">
                  <%= link_to "/auth/facebook", class:"btn btn-block btn-social btn-facebook" do %>
                      <span class="fa fa-facebook"></span> Sign up with Facebook
                  <% end %>
                 </div>
                  <div class="form-group col-md-12 signup-btn " style="text-align: center;margin-top: 57px;">
                       <input type="submit" onclick="submitFrmAjax();" value="Sign Up with Email" class="bg_green bg_black_h tc_white vijay" />
                 </div>

                  <div class="form-group col-md-12" style="text-align: center;margin-top: 10px;">
                    Already have an Ecofnb account? <a href="<%=new_merchant_session_path%>">Log in</a>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <!-- Container /- -->
   </div>
   <!-- SignUp Form /- -->
</main>
<%#= render "devise/shared/links" %>

<style type="text/css">
  .vijay{
    border: none;
    border-radius: 2px;
    font-weight: bold;
    letter-spacing: 0.35px;
    padding: 11px 25px;
    text-transform: uppercase;
}
  }
</style>
<%#= render "devise/shared/links" %>
<script>
    function submitFrmAjax(){
      var resource = '<%=resource_name%>'
     $.ajax({
            type: 'GET',
            url: '/merchants/pertner_sign_up_with_email',
            dataType: 'script',
            data: { resource : resource }
          });
    }
</script>