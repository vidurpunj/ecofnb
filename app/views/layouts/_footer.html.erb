              <div style="margin-bottom: 10px">
                  <a href="<%=blog_path(r_post)%>" title="<%= r_post.title %>"><i><img src="<%=r_post.image.url%>" class="wp-post-image" alt="<%= r_post.title %>" style="width: 120px; height: 60px; margin-bottom: 8px"></i></a>
              </div>
            </div>
            <div class="col-md-6"><a href="<%=blog_path(r_post)%>"><%= r_post.title %></a></div>
          </div>
        <%end%>
      </div>

