          <a href="<%= stay_path(latest_stay)%>" title="<%= latest_stay.stay_name%>"><i><img src="<%=latest_stay.stay_images.last.stay_image.url%>" class="img-thumbnail" alt="<%= latest_stay.stay_name%>" style="width: 150px;height: 100px;"></i></a>
